<?xml version="1.0"?>
<ruleset name="Bizzio Sync Gencloud Plugin">
  <description>PHP_CodeSniffer config for WordPress Coding Standards</description>
  <rule ref="WordPress"/>
  
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>
  
  <!-- Автоматични поправки при save -->
  <arg name="tab-width" value="4"/>
  <arg name="encoding" value="utf-8"/>
</ruleset>
